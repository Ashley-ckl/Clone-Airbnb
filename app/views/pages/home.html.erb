<div class="banner">
  <div class="funky-container">
    <div class="landing-form">
      <form action="/spaces/search" method="GET" class="funky-form">
        <h2>Book awesome event spaces.</h2>
        <label>Where</label>
        <input name="location" type="text">
        <label>Capacity</label>
        <select name="capacity">
          <option value=""></option>
          <option value="less than 20">less than 20</option>
          <option value="20 to 50">20 to 50</option>
          <option value="50 to 100">50 to 100</option>
          <option value="100 to 200">100 to 200</option>
          <option value="200 to 500">200 to 500</option>
          <option value="500+">500+</option>
        </select>
        <div>
          <button value="Search" class="funky-button">Search</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="funky-container">
  <h2>Spaces all over the world</h2>
  <div class="funky-cards-grid">
    <% @home_spaces.each do |space| %>
     <div class="funky-card-search">
       <%= image_tag "banner2.jpg" %>
       <div class="funky-card-search-info">
         <div>
           <h3><%= space.location %></h3>
           <h2><%= space.name %></h2>
           <p>Rating here</p>
         </div>
       </div>
   </div>
   <% end %>
  </div>
</div>
