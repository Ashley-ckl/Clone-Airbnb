<div class="funky-container">
  <h1>My bookings</h1>
  <br>
  <hr>
  <br>
  <h2>Coming events</h2>
  <div class="funky-cards-grid">
    <% @bookings_for_my_events.each do |booking| %>
      <div class="funky-card-search">
        <h3><%= booking.space.name%>: <%= booking.status%></h3>
        <p><%= cl_image_tag booking.space.photo %></p>
        <div class="funky-card-search-info">
          <div>
            <h4><%= booking.hours%> hours</h4>
            <h6><%= booking.start_date%></h6>
            <h6><%= booking.start_time%></h6>
          </div>
        </div>
      </div>
      <% end %>
  </div>
  <br>
  <hr>
  <br>
  <h2>My booked spaces</h2>
  <div class="funky-cards-grid">
    <% @bookings_for_my_spaces.each do |booking| %>
      <div class="funky-card-search">
        <h3><%= booking.space.name%>
        <% if booking.status == 'pending' %>
          <button class="funky-button-small"><%= link_to "Accept", accept_booking_path(booking), method: :patch %></button>
           <button class="funky-button-small"><%= link_to "Reject", reject_booking_path(booking), method: :patch %></button>
        <% else %>
          <strong><h4><%= booking.status%></h4></strong>
        <% end %></h3>
        <br>
        <p><%= cl_image_tag booking.space.photo %></p>
        <div class="funky-card-search-info">
          <div>
            <h4><%= booking.hours%> hours</h4>
            <h6><%= booking.start_date%></h6>
            <h6><%= booking.start_time%></h6>
          </div>
        </div>
      </div>
      <% end %>
  </div>
</div>

