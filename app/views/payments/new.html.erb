

<div class="funky-container">
  <div class="pay-form">
    <h2><%= @booking.space.name%></h2>
    <div class="funky-card-pay">
      <%= cl_image_tag @booking.space.photo %>
      <br>
      <br>
      <h6><%= @booking.start_date%></h6>
      <h6><%= @booking.start_time%></h6>
      <h6><%= @booking.hours%> hours</h6>
    </div>
    <hr>
    <div class="d-flex justify-content-between">
      <h3>Total price</h3>
      <h3>$<%= @booking.total_price%></h3>
    </div>
    <hr>
    <h5>Enter your credit card details</h5>
    <form action="#"  class="pay-form-bottom">
      <label>Card number</label>
      <input  type="text" class="form-control" placeholder="****************">
      <label>Expiry date</label>
      <input type="month" class="form-control">
      <label>CVC</label>
      <input maxlength="3" type="text" class="form-control">
      <label>Coupon code</label>
      <input type="text" class="form-control">
      <button class="funky-button-large" id="sweetalert"> "Pay now"</button>
    </form>
  </div>
  <br>
  <br>
<%= link_to "", bookings_path, id: "booking-link", class: "hidden" %>


</div>


